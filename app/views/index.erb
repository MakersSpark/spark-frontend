  <div class="container">
      
    <div class='jumbotron' id="top">
    <h3>my weather forecast</h3>

    <button type="button" class="btn btn-lg btn-info">update now</button>

    <p class="lead">Probability of rain <%= @forecast['currently']['precipProbability']%>%</p>
    
    <p>Actual forecast: <%= @forecast['minutely']['summary']%></p>
    
    <!-- <img src=<%= "images/#{@forecast['minutely']['icon']}.jpeg"%> alt="forecast image" > -->
    <img class="img-rounded" src='images/sad_rain_cloud-small.png' alt="...">

  </div>

  <div class='jumbotron' id="calendar">
  
    <h3>my calendar events</h3>

    <button type="button" class="btn btn-lg btn-info">update now</button>
   
<ul>
    <% @events.each do | item | %>



    <% if formating_time(item.start.dateTime) === formating_time(Time.new) %>
      
  
    <li>Event date:        <%= formating_time(item.start.dateTime) %> </li>
    <li>Event summary:     <%= item.summary %>        </li>
    <li>Event description: <%= item.description %>    </li>
     
    <li>Event location:    <%= item.location %>       </li>

     <%end%>
  </ul>

    <%end%>

  </div>
 

  <div class="jumbotron" id="tube">

  <h3>tube status</h3>

  <button type="button" class="btn btn-lg btn-info">update now</button>

    <table class="table table-striped">

      <thead>
          <th>line</th>
          <th>status</th>
        </thead>
        
        <tbody>
          <% @tfl_lines.zip(@tfl_status).each do |line,status|  %>
           <tr> 
            <td> <%=line%>   </td>
            <td class="<%= status.downcase.gsub(' ', '_') %>"> <%= status %> </td>
          
          </tr>
            <%end%>
        </tbody>
  </table>

  </div>

